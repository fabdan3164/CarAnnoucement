{% extends 'base.html.twig' %}

{% block title %}Annoucement index{% endblock %}

{% block body %}
<div class="row justify-content-between">

    <h1 class="col-12">Annonces en ligne</h1>

    {% for annoucement in annoucements %}
    <div class="card col-3" style="width: 18rem;">
        <img src="{{ asset("img/"~annoucement.id~".jpg") }}" style="object-fit: cover"
             width="100%" height="200px" class="card-img-top mt-1" alt="{{ annoucement.concerne.model }}">
        <div class="card-body">
            <h5 class="card-title">{{ annoucement.title }}</h5>
            <p class="card-text">{{ annoucement.description }}</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">{{ annoucement.price }} â‚¬</li>
            <li class="list-group-item">{{ annoucement.concerne.model }} </li>
            <li class="list-group-item">{{ annoucement.concerne.brand }} </li>

        </ul>
        <div class="card-body">
            <a href="{{ path('app_annoucement_show', {'id': annoucement.id}) }}" class="card-link">Detail</a>
            <a href="{{ path('app_annoucement_edit', {'id': annoucement.id}) }}" class="card-link">Modifier</a>
        </div>
    </div>

    {% endfor %}




    <a href="{{ path('app_annoucement_new') }}">Create new</a>
</div>
{% endblock %}
