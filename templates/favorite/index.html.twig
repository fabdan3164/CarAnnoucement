{% extends 'base.html.twig' %}

{% block title %}Favorite index{% endblock %}

{% block body %}
<div class="row justify-content-between">
    <h1>Vos Favoris</h1>

    {% for favorite in favorites %}
        {% if favorite.belong == app.user  %}
        <div class="card col-3" style="width: 18rem; background-color: beige">
            <img src="{{favorite.annoucement.picture}}" style="object-fit: cover"
                 width="100%" height="200px" class="card-img-top mt-2" alt="{{ favorite.annoucement.concerne.model }}">
            <div class="card-body">
                <h5 class="card-title">{{ favorite.annoucement.title }}</h5>

            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">{{ favorite.annoucement.price }} â‚¬</li>
                <li class="list-group-item">{{ favorite.annoucement.concerne.model }} </li>
                <li class="list-group-item">{{ favorite.annoucement.concerne.brand }} </li>

            </ul>
            <div class="card-body">
                <a href="{{ path('app_annoucement_show', {'id': favorite.annoucement.id}) }}" class="card-link link-dark">Detail</a>

                <a href="{{ path('app_add_favorite', {'id': favorite.annoucement.id}) }}" class="card-link link-dark">Supprimer des Favoris</a>
            </div>
        </div>
{% endif %}
    {% endfor %}

</div>
{% endblock %}
